{% extends 'base.html.twig' %}

{% block title %}Hello AccountController!{% endblock %}

{% block stylesheets %}
    <style>
        :root {
            --wb-purple: #8a3ffc;
            --wb-light-gray: #f6f6f9;
        }

        .account-card {
            text-decoration: none !important;
            color: #333 !important;
            display: block;
        }

        .account-card .card {
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
            border-radius: 20px;
            background-color: #fff;
        }

        /* Effet au survol */
        .account-card:hover .card {
            transform: translateY(-8px);
            box-shadow: 0 10px 25px rgba(138, 63, 252, 0.15) !important;
        }

        .account-card:hover .icon-box {
            background-color: var(--wb-purple);
            color: #fff;
        }

        /* Styles des icônes */
        .icon-box {
            width: 100px;
            height: 100px;
            background-color: var(--wb-light-gray);
            color: var(--wb-purple);
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 15px;
            font-size: 1.8rem;
            transition: all 0.3s ease;
        }

        .card-title {
            font-size: 1.2rem;
            line-height: 1.4;
        }

        /* Style spécifique pour la déconnexion */
        .logout-card .icon-box {
            color: #ff3b30;
        }
        .account-card:hover .logout-card .icon-box {
            background-color: #ff3b30;
            color: #fff;
        }

        /* Responsive */
        @media (max-width: 576px) {
            .icon-box {
                width: 50px;
                height: 50px;
                font-size: 1.5rem;
            }
            .card-title {
                font-size: 0.85rem;
            }
        }
    </style>
{% endblock %}

