    <style>
        .hero .swiper {
            width: 100%;
            /* Hauteur auto ou fixe selon tes besoins */
            height: auto;
        }

        .hero .swiper-slide {
            /* Hauteur sur mobile */
            height: 250px;
            display: flex;
            justify-content: center;
            align-items: center;
            border-radius: 12px;
            overflow: hidden;
            background: #444;
        }

        /* Ajustement de la hauteur pour tablettes et PC */
        @media (min-width: 768px) {
            .hero .swiper-slide {
                height: 30.5rem; /* On reprend ta hauteur d'origine */
            }
        }

        .hero .swiper-slide {
            height: auto; /* On annule la hauteur fixe */
            aspect-ratio: 16 / 9; /* Force le slider à garder ce format */
            border-radius: 12px;
            overflow: hidden;
        }

        .hero .swiper-slide img {
            width: 100%;
            height: 100%;
            object-fit: cover; /* Ici, il ne coupera presque rien car le cadre a la même forme que l'image */
        }


